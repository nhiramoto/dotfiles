! vi:syntax=xdefaults

#include "colors/apprentice.dark"

URxvt.termName: rxvt-unicode-256color
URxvt.cursorBlink: true

! Transparency
URxvt.transparent: false
!URxvt.tintColor: #AFAFAF
!URxvt.shading: 95
!URxvt.blurRadius: 5x5
! Dim when focus lost
URxvt.fading: 30

! Font
URxvt.font: xft:Iosevka Nerd Font:semibold:pixelsize=13, xft:FuraCode NF:medium:pixelsize=11, xft:MesloLGMDZ NF:style=Regular, xft:SourceCodePro:medium:pixelsize=11, xft:DejaVu Sans Mono:medium:pixelsize=11, xft:unifont:pixelsize=14, xft:monospace:pixelsize=14

URxvt.scrollBar: false

! Padding
!URxvt.internalBorder: 5

! Extensions
URxvt.perl-ext-common: fullscreen,url-select,clipboard,resize-font,keyboard-select

! Key Bindings
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.keysym.M-u: perl:url-select:select_next

URxvt.iso14755: false
URxvt.iso14755_52: false

!! Switch Fonts
URxvt.keysym.M-C-1: command:\033]50;xft:FiraCode:medium:size=9\007
URxvt.keysym.M-C-2: command:\033]50;xft:SourceCodePro:medium:size=9\007
URxvt.keysym.M-C-3: command:\033]50;xft:FantasqueSansMono:medium:size=10\007
URxvt.keysym.M-C-4: command:\033]50;xft:Hermit:medium:size=9\007
URxvt.keysym.M-C-5: command:\033]50;xft:Inconsolata:medium:size=9\007
URxvt.keysym.M-C-0: command:\033]50;9x15bold\007

! clipboard
URxvt.keysym.C-S-c:       perl:clipboard:copy
URxvt.keysym.C-S-v:       perl:clipboard:paste
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

! resize-font
URxvt.keysym.C-minus:    resize-font:smaller
URxvt.keysym.C-equal:    resize-font:bigger
URxvt.keysym.C-0:        resize-font:reset
URxvt.keysym.C-question: resize-font:show

! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! url-select
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

