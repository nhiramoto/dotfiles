set $suspend   --no-startup-id "systemctl suspend && i3lock-fancy"
set $hibernate --no-startup-id "systemctl hibernate"
set $reboot    --no-startup-id "systemctl reboot"
set $poweroff  --no-startup-id "systemctl poweroff"

# Touchpad
